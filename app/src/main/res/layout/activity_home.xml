<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="#0099cc">


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#476BA7"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/txtTtS2"
            android:layout_width="331dp"
            android:layout_height="114dp"
            android:gravity="center|center_vertical"
            android:text="Tap anywhere to start!"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:translationX="40dp"
            android:translationY="450dp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/obRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF3232"
            android:clickable="false"
            android:scaleX=".25"
            android:scaleY=".45"
            android:textColor="#FF0000"
            android:translationX="180dp"
            android:translationY="295dp" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" />

        <TextView
            android:id="@+id/txtTtS"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:gravity="center|center_vertical"
            android:text="Tap the Square"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:translationY="50dp"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtInstructions"
            android:layout_width="315dp"
            android:layout_height="178dp"
            android:gravity="center"
            android:text="Instructions: Tap the screen whenever the      square meets the      square"
            android:textColor="#FCFCFC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="50dp"
            android:translationY="200dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/ObBS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#32ACFF"
            android:clickable="false"
            android:scaleX=".25"
            android:scaleY=".45"
            android:textColor="#3F51B5"
            android:translationX="200dp"
            android:translationY="267dp" />

        <Button
            android:id="@+id/btnTrigger"
            android:layout_width="397dp"
            android:layout_height="97dp"
            android:visibility="visible" />


    </FrameLayout>


</FrameLayout>