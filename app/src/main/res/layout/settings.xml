<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888282"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSettings"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:gravity="center"
        android:text="SETTINGS"
        android:textColor="#F8F3EEEE"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/lytsettingsLayout"
        android:layout_width="243dp"
        android:layout_height="252dp"
        android:background="#B3A8A8"
        android:translationX="125">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <Button
        android:id="@+id/brnResetScore"
        android:layout_width="251dp"
        android:layout_height="105dp"
        android:text="Reset Score"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:translationX="120"
        android:translationY="-260" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="253dp"
        android:layout_height="102dp"
        android:text="Quit"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:translationX="120"
        android:translationY="-270" />

    <Button
        android:id="@+id/btnRetuen"
        android:layout_width="255dp"
        android:layout_height="102dp"
        android:text="Return"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:translationX="120"
        android:translationY="-280" />

</LinearLayout>